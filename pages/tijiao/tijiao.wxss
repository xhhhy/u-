.form,.address{
  width: 90%;
  margin: 0 auto ;
  display: block;

}
.name{
  letter-spacing: 2px;
}
.address picker{
  display: inline-block;
  width: 50%;
}
.address{
  margin-top: 15px;
    font-size: 14px;
  font-weight: 400;
  text-align: left;
  padding-left: 27px;
}
.time{
   margin-top: 15px;
    font-size: 14px;
  font-weight: 400;
  text-align: left;
  padding-left: 15px
}
.alltime{
  margin: 0 auto ;
}
.changetime{
  padding: 3px 18px 3px 18px;
  background-color: #f6f6f6;
  border-radius: 10px;
  height: 30px;
  line-height: 30px;
  color: #999999;
  font-size: 12px;
  text-align: center;
   float: left ;
  margin-right: 7px;
  margin-top: 15px;
}
.clearfloat:after {
   display: block;
   clear: both;/*清除两侧浮动*/
   content: ""
}
